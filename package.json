{
  "name": "ui_library",
  "version": "0.0.1",
  "description": "A React UI component library",
  "author": "ui_library",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/anurag2169/ui-library-cohert.git"
  },
  "main": "dist/uiLibrary.umd.js",
  "module": "dist/uiLibrary.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "package",
    "package/styles/global.css"
  ],
  "exports": {
    ".": {
      "import": "./dist/uiLibrary.es.js",
      "require": "./dist/uiLibrary.umd.js"
    },
    "./styles.css": {
      "require": "./dist/tailwind.css",
      "default": "./dist/tailwind.css"
    }
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run build:css",
    "lint": "eslint .",
    "preview": "vite preview",
    "build:css": "tailwindcss -i ./package/styles/global.css -o ./dist/tailwind.css"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "vite": "^6.2.0"
  }
}
